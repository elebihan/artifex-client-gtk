using Gtk 4.0;
using Adw 1;

template $OperationPage : Adw.Bin {
  Adw.ToolbarView {
    [top]
    Adw.HeaderBar header_bar {
      title-widget: Adw.WindowTitle window_title {};
    }
    content: Adw.ToastOverlay toast_overlay {
      Gtk.Box {
        orientation: vertical;
        Gtk.ScrolledWindow {
          hscrollbar-policy: never;
          vexpand: true;
          Gtk.Box container {
            hexpand: true;
            spacing: 12;
            orientation: vertical;
          }
        }
      }
    };
  }
}
